import Layout from "../layouts/Layout.astro";
import { DrYosryBio } from "../data";
import drYosryImage from "../assets/dr-yosry-bio-cover.jpg";

// Parse the biography content into sections
const bioSections = DrYosryBio.split('##').filter(section => section.trim());
const intro = bioSections[0].trim();
const sections = bioSections.slice(1).map(section => {
  const lines = section.trim().split('\n');
  const title = lines[0].trim();
  const content = lines.slice(1).join('\n').trim();
  return { title, content };
});
