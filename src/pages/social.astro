  },
  {
    id: "tiktok",
    platform: "TikTok",
    title: "تيك توك",
    handle: "@dryosrygabr",
    url: "#",
    color: "hover:border-cyan-400 hover:shadow-cyan-400/20",
    iconColor: "group-hover:text-cyan-400",
    bgHover: "group-hover:bg-cyan-400/10",
    description: "مقتطفات سريعة ومواعظ",
    icon: "tiktok"
  },

  // --- Messaging & Updates ---
  {
    id: "telegram",
    platform: "Telegram",
    title: "قناة التيليجرام",
    handle: "Official Channel",
    url: "#",
    color: "hover:border-sky-500 hover:shadow-sky-500/20",
    iconColor: "group-hover:text-sky-500",
    bgHover: "group-hover:bg-sky-500/10",
    description: "آخر التحديثات والإعلانات",
    icon: "telegram"
  },
  {
    id: "twitter",
    platform: "Twitter (X)",
    title: "تويتر (X)",
    handle: "@dryosrygabr",
